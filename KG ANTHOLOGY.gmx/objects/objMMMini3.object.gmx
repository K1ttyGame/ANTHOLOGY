                speed = other.i/2
                depth = -100000
            }
        }
    }
    if (timer &gt;= 150) {
        if instance_exists(objMMProjectile) {
            with (objMMProjectile) speed += .25
        }
    }
    if (timer == 225) {
        timer = 0
        phase++
    }
    timer++
}

if (phase == 1) { //wait for MM4 attack
    timer++
    if (timer == 350 || !instance_exists(objMMMini4)) {
        timer = 0
        phase++
    }
}

if (phase == 2) { //wait for MM5 to attack
    timer++
    if (timer == 275 || !instance_exists(objMMMini5)) {
        timer = 0
        phase = 0
        audio_play_sound(sndWarningSound, 10, false)
        with instance_create(x - 32, y - 32, objMMMiniSummon) {
